{
    "extends": "rallycoding",
    "rules": {
        "arrow-body-style": 0,
        "max-len": 0,
        "no-underscore-dangle": 0,
        "global-require": 0,
        "no-throw-literal": 0,
        "array-callback-return": 0,
        "no-param-reassign": 0
    },
    "ecmaFeatures": {
        "jsx": true,
        "modules": true
    },
    "globals": { 
        "fetch": false 
    }
}